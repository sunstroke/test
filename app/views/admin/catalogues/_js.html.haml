:javascript
  $(document).ready(function(){
    $('#tables').sortable({
      axis: 'y',
      dropOnEmpty: false,
      handle: '.handle',
      cursor: 'crosshair',
      items: 'li',
      opacity: 0.4,
      scroll: true,
      update: function(){
      $.ajax({
        type: 'post',
        data: $('#tables').sortable('serialize'),
        dataType: 'script',
        complete: function(request){
          $('#tables').effect('highlight');
        },
        url: '/catalogues/sort'})
      }
    });
  });    
:css
  .handle:hover{
    cursor: move;
  }
  #tables li {
  list-style-type: square;
  }
